# Database (PostgreSQL - use Neon, Supabase, or other provider)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Authentication (Better Auth)
BETTER_AUTH_SECRET=generate-a-secure-random-string-min-32-chars
BETTER_AUTH_URL=https://your-domain.com
# Comma-separated list of trusted origins (optional in dev, required in prod)
BETTER_AUTH_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google Analytics 4
NEXT_PUBLIC_GA_ID=G-F0RFQNG8SP

# AI Features (optional - for ingredient generation)
OPENROUTER_API_KEY=sk-or-v1-your-api-key


